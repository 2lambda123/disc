{
  "name": "disc",
  "version": "1.2.2",
  "description": "A tool for analyzing the module tree of a browserify bundle or node project",
  "main": "index.js",
  "scripts": {
    "prepublish": "mkdir -p build && npm run browserify && npm run rework && npm run bundle-demo",
    "browserify": "browserify src/index.js | uglifyjs -c 2> /dev/null > build/bundle.js",
    "bundle-demo": "node lib/bundle-demo > index.html",
    "demo": "npm run prepublish && opener index.html",
    "rework": "node lib/bundle-css > build/style.css"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/hughsk/disc.git"
  },
  "bin": {
    "discify": "bin/discify"
  },
  "author": "Hugh Kennedy <hughskennedy@gmail.com> (http://hughskennedy.com/)",
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "browser-unpack": "git://github.com/hughsk/browser-unpack#empty-fix",
    "d3": "^3.4.3",
    "optimist": "^0.6.1",
    "bl": "^0.7.0",
    "plucker": "0.0.0",
    "flatten": "0.0.1",
    "commondir": "0.0.1",
    "uniq": "^1.0.0",
    "resolve": "^0.6.2",
    "map-async": "^0.1.1",
    "file-tree": "0.0.0",
    "builtins": "0.0.3",
    "through": "^2.3.4",
    "duplexer": "^0.1.1",
    "opener": "^1.3.0"
  },
  "devDependencies": {
    "btoa": "^1.1.1",
    "marked": "^0.3.2",
    "browserify": "^3.33.0",
    "clean-css": "^2.1.6",
    "rework": "^0.20.2",
    "domready": "^1.0.4",
    "prettysize": "0.0.3",
    "autoprefixer": "^1.1.20140319",
    "uglifyjs": "^2.3.6"
  },
  "keywords": [
    "analyze",
    "analytics",
    "directory",
    "file",
    "modules",
    "tree",
    "tool",
    "browserify",
    "size",
    "structure",
    "visualize"
  ]
}
